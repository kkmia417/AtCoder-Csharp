{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C# Script to out.txt",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "dotnet-script '${file}' < '${workspaceFolder}/input.txt' > '${workspaceFolder}/out.txt'"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
